<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="CairoDesktop.Taskbar" xmlns:self="clr-namespace:CairoDesktop"
    x:Name="Window"
    Title=""
    Height="29"
    WindowStyle="None"
    AllowsTransparency="True"
    Left="0"
    Margin="0,0,0,0"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    AllowDrop="True"
    Visibility="Visible"
    SizeToContent="Width"
    Focusable="False"
    Background="{x:Null}"
    Topmost="True" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Cairo.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <self:WindowsTasksService x:Key="tasksSvc" x:Name="tasksSvc" />
            <self:BoolTovisibilityConverter x:Key="BoolVisConverter" />
            <SolidColorBrush x:Key="ListBorder"
                Color="#828790" />
            <Style x:Key="ListViewStyle1"
                TargetType="{x:Type ListView}">
                <Setter Property="Background"
                    Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
                <Setter Property="BorderBrush"
                    Value="{StaticResource ListBorder}" />
                <Setter Property="BorderThickness"
                    Value="1" />
                <Setter Property="Foreground"
                    Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Auto" />
                <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto" />
                <Setter Property="ScrollViewer.CanContentScroll"
                    Value="true" />
                <Setter Property="VerticalContentAlignment"
                    Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListView}">
                            <Border SnapsToDevicePixels="true"
                                x:Name="Bd"
                                Background="{TemplateBinding Background}">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    MinHeight="29" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled"
                                    Value="false">
                                    <Setter Property="Background"
                                        TargetName="Bd"
                                        Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
                                </Trigger>
                                <Trigger Property="IsGrouping"
                                    Value="true">
                                    <Setter Property="ScrollViewer.CanContentScroll"
                                        Value="true" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ListViewStyle2"
                TargetType="{x:Type ListView}">
                <Setter Property="Background"
                    Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
                <Setter Property="BorderBrush"
                    Value="{StaticResource ListBorder}" />
                <Setter Property="BorderThickness"
                    Value="1" />
                <Setter Property="Foreground"
                    Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Auto" />
                <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto" />
                <Setter Property="ScrollViewer.CanContentScroll"
                    Value="true" />
                <Setter Property="VerticalContentAlignment"
                    Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListView}">
                            <Border SnapsToDevicePixels="true"
                                x:Name="Bd"
                                Background="{TemplateBinding Background}">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    MinHeight="29" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled"
                                    Value="false">
                                    <Setter Property="Background"
                                        TargetName="Bd"
                                        Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
                                </Trigger>
                                <Trigger Property="IsGrouping"
                                    Value="true">
                                    <Setter Property="ScrollViewer.CanContentScroll"
                                        Value="true" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ListViewItem">
                <Style.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                </Style.Resources>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Width="{x:Static SystemParameters.MaximizedPrimaryScreenWidth}"
        HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="36" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border CornerRadius="8,0,0,0" BorderThickness="1,1,0,0" HorizontalAlignment="Center" Grid.Column="1" Padding="5,0,0,0" Name="TaskbarBorder">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="#CF1a1a1a" Offset="1.0" />
                    <GradientStop Color="#DF000000" Offset="0.7" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#CF1a1a1a" Offset="1.0" />
                    <GradientStop Color="#8F606060" Offset="0.0" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <StackPanel Orientation="Horizontal">
                <Button Margin="0,2,0,0" Height="26" Style="{StaticResource CairoTaskbarButtonList}" Click="Desktop_Click">
                    <Image Source="Resources\switchToDesktop.png"
                           Width="15"
                           Height="12"
                           Opacity="0.3"
                           Margin="0,0,0,0"></Image>
                </Button>
                <StackPanel Orientation="Horizontal">
                <ListView HorizontalAlignment="Stretch"
                    Name="quickLaunchList"
                    Background="{x:Null}"
                    Foreground="{x:Null}"
                    Style="{DynamicResource ListViewStyle1}"
                    BorderThickness="0"
                    VerticalAlignment="Stretch">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                Margin="0"></StackPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <self:QuickLaunchButton />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ListView HorizontalAlignment="Stretch"
                    DataContext="{StaticResource tasksSvc}"
                    ItemsSource="{Binding Windows}"
                    Background="{x:Null}"
                    Foreground="{x:Null}"
                    BorderBrush="#FF908382"
                    Style="{DynamicResource ListViewStyle1}"
                    BorderThickness="0,0,0,0"
                    VerticalAlignment="Stretch"
                    x:Name="TasksList">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                Margin="0"></StackPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1,1,1,0" BorderBrush="#BF000000">
                                <self:TaskButton Visibility="{Binding Path=ShowInTaskbar, Converter={StaticResource BoolVisConverter}}" />
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                </StackPanel>
                
            </StackPanel>
        </Border>
        <Border CornerRadius="0,8,0,0" BorderThickness="0,1,1,0" HorizontalAlignment="Left" Grid.Column="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="#CF1a1a1a" Offset="1.0" />
                    <GradientStop Color="#DF000000" Offset="0.7" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#CF1a1a1a" Offset="1.0" />
                    <GradientStop Color="#8F606060" Offset="0.0" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <StackPanel Orientation="Horizontal">
                <Button Margin="2,0,1,0" Height="26" Style="{StaticResource CairoTaskbarButtonList}" Click="Button_Click">
                    <Image Source="Resources\taskListIcon.png"
                           Width="15"
                           Height="12"
                           Opacity="0.3"
                           Margin="0,0,0,0"></Image>
                </Button>
                <Popup Placement="MousePoint" Name="CairoTaskbarTaskList" AllowsTransparency="True" PopupAnimation="Fade">
                <Border Style="{StaticResource CairoTaskListPopupStyle}">
                    <ListView HorizontalAlignment="Stretch"
                    DataContext="{StaticResource tasksSvc}"
                    ItemsSource="{Binding Windows}"
                    Background="{x:Null}"
                    Foreground="{x:Null}"
                    BorderBrush="#FF908382"
                    Style="{DynamicResource ListViewStyle1}"
                    BorderThickness="0,0,0,0"
                    VerticalAlignment="Stretch" x:Name="TasksList2">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"
                                Margin="0"></StackPanel>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Style.Resources>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                                </Style.Resources>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <self:TaskListButton Visibility="{Binding Path=ShowInTaskbar, Converter={StaticResource BoolVisConverter}}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Popup>
                </StackPanel>
        </Border>
    </Grid>
    
</Window>
